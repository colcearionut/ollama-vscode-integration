{
  "name": "ollama-vscode-integration",
  "displayName": "ollama-vscode-integration",
  "description": "Extension for VSCode to autocomplete from Ollama models like DeepseekR1",
  "version": "0.0.1",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Other"
  ],
  "scripts": {
    "start": "code --extensionDevelopmentPath=./src",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.17.17",
    "@types/vscode": "^1.60.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.19.0",
    "typescript": "^4.5.2",
    "vsce": "^1.23.0"
  },
  "typescript": {
    "tsconfig": "./tsconfig.json"
  },
  "contributes": {
    "commands": [
      {
        "command": "ollama.generate",
        "title": "Generate with Ollama",
        "keybindings": [
          {
            "key": "alt+shift+z",
            "when": "editorTextFocus"
          }
        ]
      }
    ],
    "keybindings": [
      {
        "command": "ollama.generate",
        "key": "alt+shift+z",
        "when": "editorTextFocus"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "ollama.generate",
          "group": "navigation"
        }
      ]
    }
  },
  "dependencies": {
    "ollama": "^0.5.12",
    "ollama-node": "^0.1.28"
  }
}
